<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="15dp">

    <Button
        android:id="@+id/btnXenoDialogStageTwoFacehugger"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:layout_marginTop="8dp"
        android:text="Facehugger"
        android:backgroundTint="@color/aliengrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnXenoDialogStageTwoRoyalFacehugger"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/alienviolet"
        android:text="Royal Facehugger"
        app:layout_constraintEnd_toEndOf="@+id/btnXenoDialogStageTwoFacehugger"
        app:layout_constraintStart_toStartOf="@+id/btnXenoDialogStageTwoFacehugger"
        app:layout_constraintTop_toBottomOf="@+id/btnXenoDialogStageTwoFacehugger" />

    <Button
        android:id="@+id/btnXenoDialogStageTwoPraetoFacehugger"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/aliengreen"
        android:text="Pre-Facehugger"
        app:layout_constraintEnd_toEndOf="@+id/btnXenoDialogStageTwoRoyalFacehugger"
        app:layout_constraintStart_toStartOf="@+id/btnXenoDialogStageTwoRoyalFacehugger"
        app:layout_constraintTop_toBottomOf="@+id/btnXenoDialogStageTwoRoyalFacehugger" />
</androidx.constraintlayout.widget.ConstraintLayout>