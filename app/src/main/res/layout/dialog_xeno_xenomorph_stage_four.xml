<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="15dp">

    <Button
        android:id="@+id/btnXenoDialogStageFourDrone"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:layout_marginTop="8dp"
        android:text="Drone"
        android:backgroundTint="@color/aliengrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnXenoDialogStageFourStalker"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/aliengreen"
        android:text="Stalker"
        app:layout_constraintEnd_toEndOf="@+id/btnXenoDialogStageFourDrone"
        app:layout_constraintStart_toStartOf="@+id/btnXenoDialogStageFourDrone"
        app:layout_constraintTop_toBottomOf="@+id/btnXenoDialogStageFourDrone" />

    <Button
        android:id="@+id/btnXenoDialogStageFourScout"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/alienbrown"
        android:text="Scout"
        app:layout_constraintEnd_toEndOf="@+id/btnXenoDialogStageFourStalker"
        app:layout_constraintStart_toStartOf="@+id/btnXenoDialogStageFourStalker"
        app:layout_constraintTop_toBottomOf="@+id/btnXenoDialogStageFourStalker" />
</androidx.constraintlayout.widget.ConstraintLayout>