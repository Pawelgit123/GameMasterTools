<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlienPanicRoll">


    <TextView
        android:id="@+id/txtPanicLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/alien_panic_roller_panic_level"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtToButtonPanicLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/zeroPlacedHolder"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/plusNumberOfAdversaries"
        app:layout_constraintStart_toEndOf="@+id/minusNumberOfAdversaries"
        app:layout_constraintTop_toBottomOf="@+id/txtPanicLevel" />

    <Button
        android:id="@+id/minusNumberOfAdversaries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/minus"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtToButtonPanicLevel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtToButtonPanicLevel"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/plusNumberOfAdversaries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="@string/plus"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtToButtonPanicLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtToButtonPanicLevel"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnPanicRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/alien_panic_roller_panic_roll_button"
        app:layout_constraintEnd_toEndOf="@+id/txtToButtonPanicLevel"
        app:layout_constraintStart_toStartOf="@+id/txtToButtonPanicLevel"
        app:layout_constraintTop_toBottomOf="@+id/txtToButtonPanicLevel" />

    <TextView
        android:id="@+id/textPanicRollNumberRolled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="@string/zeroPlacedHolder"
        app:layout_constraintEnd_toEndOf="@+id/btnPanicRoll"
        app:layout_constraintStart_toStartOf="@+id/btnPanicRoll"
        app:layout_constraintTop_toBottomOf="@+id/btnPanicRoll" />

    <TextView
        android:id="@+id/textPanicRollDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@color/teal_200"
        android:text="@string/namePlacedHolder"
        app:layout_constraintEnd_toEndOf="@+id/textPanicRollNumberRolled"
        app:layout_constraintStart_toStartOf="@+id/textPanicRollNumberRolled"
        app:layout_constraintTop_toBottomOf="@+id/textPanicRollNumberRolled" />
</androidx.constraintlayout.widget.ConstraintLayout>