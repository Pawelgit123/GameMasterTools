        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textAlignment="center">

            <TextView
                android:id="@+id/textViewWoundRankFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="@string/healing_wound_rank_five"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textViewInfectionFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/healing_infection_five" />

            <TextView
                android:id="@+id/textVieFirstAidFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/healing_first_aid_five" />

            <TextView
                android:id="@+id/textViewMedicalHelpFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/healing_medical_help_five" />

            <TextView
                android:id="@+id/textViewHealingFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/healing_healing_five" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:textAlignment="center">

            <TextView
                android:id="@+id/textViewWoundRankSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="@string/healing_wound_rank_six"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textViewInfectionSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/healing_infection_six" />

            <TextView
                android:id="@+id/textViewFirstAidSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/healing_first_aid_six" />

            <TextView
                android:id="@+id/textViewMedicalHelpSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/healing_medical_help_six" />

            <TextView
                android:id="@+id/textViewHealingSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/healing_healing_six" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btbBloodHealingTablePrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="@string/previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewFirstAidMod"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/green"
        android:textAlignment="center"
        android:text="@string/healing_modifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/textViewInfectionMod"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/gold"
        android:textAlignment="center"
        android:text="@string/healing_modifications"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFirstAidMod"
        app:layout_constraintEnd_toStartOf="@+id/textViewFirstAidMod"
        app:layout_constraintTop_toTopOf="@+id/textViewFirstAidMod" />

    <TextView
        android:id="@+id/textViewMedicalHelpMod"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/green_deep"
        android:textAlignment="center"
        android:text="@string/healing_modifications"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFirstAidMod"
        app:layout_constraintStart_toEndOf="@+id/textViewFirstAidMod"
        app:layout_constraintTop_toTopOf="@+id/textViewFirstAidMod"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewHealingMod"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:textAlignment="center"
        android:text="@string/healing_modifications"
        app:layout_constraintBottom_toBottomOf="@+id/textViewMedicalHelpMod"
        app:layout_constraintStart_toEndOf="@+id/textViewMedicalHelpMod"
        app:layout_constraintTop_toTopOf="@+id/textViewMedicalHelpMod" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFirstAidMod"
        android:layout_width="59dp"
        android:layout_height="162dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewFirstAidMod"
        app:layout_constraintStart_toStartOf="@+id/textViewFirstAidMod"
        app:layout_constraintTop_toBottomOf="@+id/textViewFirstAidMod" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewInfectionMod"
        android:layout_width="65dp"
        android:layout_height="187dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewInfectionMod"
        app:layout_constraintStart_toStartOf="@+id/textViewInfectionMod"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfectionMod" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMedicalHelpMod"
        android:layout_width="56dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewMedicalHelpMod"
        app:layout_constraintStart_toStartOf="@+id/textViewMedicalHelpMod"
        app:layout_constraintTop_toBottomOf="@+id/textViewMedicalHelpMod" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHealingMod"
        android:layout_width="55dp"
        android:layout_height="209dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewHealingMod"
        app:layout_constraintStart_toStartOf="@+id/textViewHealingMod"
        app:layout_constraintTop_toBottomOf="@+id/textViewHealingMod" />
