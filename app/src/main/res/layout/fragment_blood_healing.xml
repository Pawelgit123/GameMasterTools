                android:gravity="center"
                android:text="@string/healing_first_aid_three" />

            <TextView
                android:id="@+id/textViewMedicalHelpThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/healing_medical_help_three" />

            <TextView
                android:id="@+id/textViewHealingThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/healing_healing_three" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textAlignment="center">

            <TextView
                android:id="@+id/textViewWoundRankFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="@string/healing_wound_rank_four"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textViewInfectionFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/healing_infection_four" />

            <TextView
                android:id="@+id/textViewFirstAidFour"
                android:layout_width="wrap_content"
