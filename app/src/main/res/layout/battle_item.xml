<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:id="@+id/battle_item_id">

    <CheckBox
        android:id="@+id/checkBoxDiceNumberTwelve"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/checkBoxDiceNumberEleven"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDiceNumberEight" />

    <CheckBox
        android:id="@+id/checkBoxDiceNumberEleven"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/checkBoxDiceNumberTen"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDiceNumberSeven" />

    <CheckBox
        android:id="@+id/checkBoxDiceNumberTen"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/checkBoxDiceNumberNine"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDiceNumberSix" />

    <CheckBox
        android:id="@+id/checkBoxDiceNumberNine"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/checkBoxDiceNumberFive"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDiceNumberFive" />

    <CheckBox
        android:id="@+id/checkBoxDiceNumberFive"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxDiceNumberOne"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/checkBoxDiceNumberOne"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDiceNumberOne" />

    <CheckBox
        android:id="@+id/checkBoxDiceNumberSeven"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/checkBoxDiceNumberSix"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDiceNumberThree" />

    <CheckBox
        android:id="@+id/checkBoxDiceNumberEight"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/checkBoxDiceNumberSeven"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDiceNumberFour" />

    <CheckBox
        android:id="@+id/checkBoxDiceNumberSix"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/checkBoxDiceNumberFive"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDiceNumberTwo" />

    <CheckBox
        android:id="@+id/checkBoxDiceNumberFour"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxDiceNumberThree"
        app:layout_constraintStart_toEndOf="@+id/checkBoxDiceNumberThree"
        app:layout_constraintTop_toTopOf="@+id/checkBoxDiceNumberThree" />

    <CheckBox
        android:id="@+id/checkBoxDiceNumberThree"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxDiceNumberSix"
        app:layout_constraintStart_toEndOf="@+id/checkBoxDiceNumberTwo"
        app:layout_constraintTop_toTopOf="@+id/checkBoxDiceNumberTwo" />

    <TextView
        android:id="@+id/textAdversaryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/namePlacedHolder"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textAdversaryInitiativeRolled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@color/gold"
        android:text="@string/initiativeRolled"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCourageNumber"
        app:layout_constraintStart_toEndOf="@+id/textViewCourageNumber"
        app:layout_constraintTop_toTopOf="@+id/textViewCourageNumber" />

    <TextView
        android:id="@+id/textInitiativeDices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/gold"
        android:text="@string/initiativeDices"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textAdversaryInitiativeRolled"
        app:layout_constraintTop_toBottomOf="@+id/textAdversaryInitiativeRolled" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="56dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="105dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="71dp" />

    <ImageView
        android:id="@+id/imageViewBackgroundVirtues"
        android:layout_width="100dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewStrength"
        app:layout_constraintEnd_toEndOf="@+id/textViewWisdomNumber"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/textViewStrength"
        app:srcCompat="@color/gold" />

    <TextView
        android:id="@+id/textViewProwess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/virtueProwess"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textAdversaryName" />

    <TextView
        android:id="@+id/textViewStrength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/virtueStrength"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textViewProwess" />

    <TextView
        android:id="@+id/textViewCunning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/virtueCunning"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textViewStrength" />

    <TextView
        android:id="@+id/textViewCourage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/virtueCourage"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewProwess"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/textViewProwess" />

    <TextView
        android:id="@+id/textViewWisdom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/virtueWisdom"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewStrength"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/textViewStrength" />

    <TextView
        android:id="@+id/textViewBeauty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/virtueBeauty"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCunning"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/textViewCunning" />

    <TextView
        android:id="@+id/textViewProwessNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zeroPlacedHolder"
        app:layout_constraintBottom_toBottomOf="@+id/textViewProwess"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/textViewProwess" />

    <TextView
        android:id="@+id/textViewStrengthNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zeroPlacedHolder"
        app:layout_constraintBottom_toBottomOf="@+id/textViewStrength"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/textViewStrength" />

    <TextView
        android:id="@+id/textViewCunningNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zeroPlacedHolder"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCunning"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/textViewCunning" />

    <TextView
        android:id="@+id/textViewCourageNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zeroPlacedHolder"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCourage"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/textViewCourage" />

    <TextView
        android:id="@+id/textViewWisdomNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zeroPlacedHolder"
        app:layout_constraintBottom_toBottomOf="@+id/textViewWisdom"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/textViewWisdom" />

    <TextView
        android:id="@+id/textViewBeautyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zeroPlacedHolder"
        app:layout_constraintBottom_toBottomOf="@+id/textViewBeauty"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/textViewBeauty" />

    <TextView
        android:id="@+id/textAdversaryInitiativeRolledNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/zeroPlacedHolder"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textAdversaryInitiativeRolled"
        app:layout_constraintStart_toEndOf="@+id/textAdversaryInitiativeRolled"
        app:layout_constraintTop_toTopOf="@+id/textAdversaryInitiativeRolled" />

    <TextView
        android:id="@+id/textInitiativeDicesNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/zeroPlacedHolder"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textInitiativeDices"
        app:layout_constraintStart_toEndOf="@+id/textInitiativeDices"
        app:layout_constraintTop_toTopOf="@+id/textInitiativeDices" />

    <TextView
        android:id="@+id/textCombatDices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/combatDices"
        android:textColor="@color/teal_200"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textInitiativeDices"
        app:layout_constraintTop_toBottomOf="@+id/textInitiativeDices" />

    <TextView
        android:id="@+id/textCombatdDicesNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/zeroPlacedHolder"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textCombatDices"
        app:layout_constraintStart_toEndOf="@+id/textCombatDices"
        app:layout_constraintTop_toTopOf="@+id/textCombatDices" />

    <TextView
        android:id="@+id/textBonusInitiative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/zeroPlacedHolder"
        android:textColor="@color/gold"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textAdversaryInitiativeRolled"
        app:layout_constraintStart_toEndOf="@+id/textAdversaryInitiativeRolled"
        app:layout_constraintTop_toTopOf="@+id/textAdversaryInitiativeRolled" />

    <TextView
        android:id="@+id/textAreYouLeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/namePlacedHolder"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textAdversaryName"
        app:layout_constraintEnd_toStartOf="@+id/textAdversaryName"
        app:layout_constraintTop_toTopOf="@+id/textAdversaryName" />

    <TextView
        android:id="@+id/textWeapon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/namePlacedHolder"
        android:textColor="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="@+id/textAdversaryName"
        app:layout_constraintStart_toEndOf="@+id/textAdversaryName"
        app:layout_constraintTop_toTopOf="@+id/textAdversaryName" />

    <Button
        android:id="@+id/btnAddWound"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/red"
        android:text="@string/addWoundButton"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toEndOf="@+id/textCombatDices"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDiceNumberTen" />

    <CheckBox
        android:id="@+id/checkBoxDiceNumberOne"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAdversaryName"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/checkBoxDiceNumberTwo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxDiceNumberOne"
        app:layout_constraintStart_toEndOf="@+id/checkBoxDiceNumberOne"
        app:layout_constraintTop_toTopOf="@+id/checkBoxDiceNumberOne" />

    <TextView
        android:id="@+id/textViewWounds"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/house_lanister"
        android:textColor="@color/red"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnAddWound"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBackgroundVirtues" />

</androidx.constraintlayout.widget.ConstraintLayout>