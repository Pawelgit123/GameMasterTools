<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="15dp">

    <Button
        android:id="@+id/btnXenoDialogAnathemaAfflicted"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:backgroundTint="@color/teal_700"
        android:layout_marginTop="8dp"
        android:text="Afflicted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnXenoDialogAnathemaFebrile"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:backgroundTint="@color/teal_700"
        android:layout_marginTop="8dp"
        android:text="Febrile"
        app:layout_constraintEnd_toEndOf="@+id/btnXenoDialogAnathemaAfflicted"
        app:layout_constraintStart_toStartOf="@+id/btnXenoDialogAnathemaAfflicted"
        app:layout_constraintTop_toBottomOf="@+id/btnXenoDialogAnathemaAfflicted" />

    <Button
        android:id="@+id/btnXenoDialogAnathemaFreak"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:backgroundTint="@color/teal_700"
        android:layout_marginTop="8dp"
        android:text="Freak"
        app:layout_constraintEnd_toEndOf="@+id/btnXenoDialogAnathemaFebrile"
        app:layout_constraintStart_toStartOf="@+id/btnXenoDialogAnathemaFebrile"
        app:layout_constraintTop_toBottomOf="@+id/btnXenoDialogAnathemaFebrile" />

    <Button
        android:id="@+id/btnXenoDialogAnathemaTerminal"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:backgroundTint="@color/teal_700"
        android:layout_marginTop="8dp"
        android:text="Terminal"
        app:layout_constraintEnd_toEndOf="@+id/btnXenoDialogAnathemaFreak"
        app:layout_constraintStart_toStartOf="@+id/btnXenoDialogAnathemaFreak"
        app:layout_constraintTop_toBottomOf="@+id/btnXenoDialogAnathemaFreak" />
</androidx.constraintlayout.widget.ConstraintLayout>