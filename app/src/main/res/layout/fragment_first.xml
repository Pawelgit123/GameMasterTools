<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:fontFamily="@font/lemon"
        app:layout_constraintBottom_toTopOf="@id/button_go_blood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button_go_blood"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/xangda_shiny"
        android:text="@string/blood"
        android:textAllCaps="false"
        android:backgroundTint="@color/red"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textview_first"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/textview_first"
        app:layout_constraintTop_toBottomOf="@+id/textview_first" />

    <Button
        android:id="@+id/button_go_alien"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:fontFamily="@font/ocr_a_std_regular"
        android:text="@string/alien"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="@+id/button_go_to_house"
        app:layout_constraintStart_toStartOf="@+id/button_go_to_house"
        app:layout_constraintTop_toBottomOf="@+id/button_go_to_house" />

    <TextView
        android:id="@+id/textViewCreatorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/developedBy"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/imageLogoDescription"
        android:src="@mipmap/dices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_go_to_house"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:text="@string/house"
        android:textAllCaps="false"
        android:fontFamily="@font/aladin_regular"
        android:textSize="18sp"
        android:backgroundTint="@color/alienbrown"
        app:layout_constraintEnd_toEndOf="@+id/button_go_blood"
        app:layout_constraintStart_toStartOf="@+id/button_go_blood"
        app:layout_constraintTop_toBottomOf="@+id/button_go_blood" />

    <TextView
        android:id="@+id/textViewDisclaimer"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/disc"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textViewCreatorName"
        app:layout_constraintEnd_toEndOf="@+id/textViewCreatorName"
        app:layout_constraintStart_toStartOf="@+id/textViewCreatorName" />
</androidx.constraintlayout.widget.ConstraintLayout>