<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BloodFragment">

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/button_go_menu_blood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_go_menu_blood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBloodSourceBooks" />

    <Button
        android:id="@+id/btnBloodSourceBooks"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:text="@string/source_books"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBloodHealing"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:text="@string/healing_table"
        app:layout_constraintEnd_toEndOf="@+id/btnBloodBattleCreate"
        app:layout_constraintStart_toStartOf="@+id/btnBloodBattleCreate"
        app:layout_constraintTop_toBottomOf="@+id/btnBloodBattleCreate" />

    <Button
        android:id="@+id/btnBloodBattleCreate"
        android:layout_width="@dimen/button_x"
        android:layout_height="@dimen/button_y"
        android:text="@string/battle_creator"
        app:layout_constraintEnd_toEndOf="@+id/btnBloodSourceBooks"
        app:layout_constraintStart_toStartOf="@+id/btnBloodSourceBooks"
        app:layout_constraintTop_toBottomOf="@+id/btnBloodSourceBooks" />
</androidx.constraintlayout.widget.ConstraintLayout>